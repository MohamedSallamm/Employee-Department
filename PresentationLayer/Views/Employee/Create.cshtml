@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";
    var departments = new SelectList(@ViewBag.Departments, "ID", "Name");

}

<h1>Add New Employee</h1>
<br/>  
<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Image"></label>
        <input class="form-control" asp-for="Image" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Age"></label>
        <input class="form-control" asp-for="Age" />
        <span class="text-danger" asp-validation-for="Age"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span class="text-danger" asp-validation-for="Address"></span>

    </div>


       <div class="form-group">
    <label class="col-form-label" asp-for="Department"></label>
    <select class="form-control" asp-items="@departments" asp-for="DepartmentID">
    <option> ----- Select Department ----- </option>
    </select>
    </div>
   

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input class="form-control" asp-for="Salary" />
        <span class="text-danger" asp-validation-for="Salary"></span>

    </div>

    <label>User Status</label>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" />
        <label class="form-check-label" for="flexRadioDefault1">
            Active
        </label>
        <span class="text-danger" asp-validation-for="Active"></span>

    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
        <label class="form-check-label" for="flexRadioDefault2">
            InActive
        </label>
        <span class="text-danger" asp-validation-for="Active"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>

    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input class="form-control" asp-for="PhoneNumber" />
        <span class="text-danger" asp-validation-for="PhoneNumber"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="hiringDate"></label>
        <input class="form-control" asp-for="hiringDate" />
        <span class="text-danger" asp-validation-for="hiringDate"></span>

    </div>
    <br />
    <input type="submit" value="Submit" class="btn btn-primary" /> |
    <a class="btn btn-light" asp-action="Index">Back</a>
</form>
@section ValidationScript {   
    <partial name="_ValidationScriptsPartial" />
}  